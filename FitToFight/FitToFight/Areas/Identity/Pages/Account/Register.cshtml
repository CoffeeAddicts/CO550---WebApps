@page
@using static FitToFight.Areas.Identity.Pages.Account.RegisterModel;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3" style="background-color:#FFFFFF">
        <h2 class="text-center mb-3">Register</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> First Name </label>
                <div class="col-sm-8">
                    <input asp-for="Input.FirstName" class="form-control">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Last Name</label>
                <div class="col-sm-8">
                    <input asp-for="Input.LastName" class="form-control">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Email </label>
                <div class="col-sm-8">
                    <input asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Password </label>
                <div class="col-sm-8">
                    <input asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Confirm Password </label>
                <div class="col-sm-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Date Of Birth </label>
                <div class="col-sm-8">
                    <input asp-for="Input.DateOfBirth" class="form-control">
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Gender </label>
                <div class="col-sm-8">
                    <select asp-for="Input.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                    @* <input asp-for="Input.Gender" class="form-control"> *@
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Emergency Contact </label>
                <div class="col-sm-8">
                    <input asp-for="Input.EmergencyContact" class="form-control">
                    <span asp-validation-for="Input.EmergencyContact" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"> Legal Guardian Phone Number </label>
                <div class="col-sm-8">
                    <input asp-for="Input.LegalGuardianPhoneNumber" class="form-control">
                    <span asp-validation-for="Input.LegalGuardianPhoneNumber" class="text-danger"></span>
                </div>
            </div>

            @* <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div> *@

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                </div>
            </div>
            @* <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button> *@
        </form>
    </div>

</div>
